<!-- pybulletでurdfを使うときはjointにsphericalが使える -->
<!-- SDF ball joints : https://github.com/bulletphysics/bullet3/issues/2262 -->
<?xml version="1.0"?>
<robot name="test_robot">

  <link name="base_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.0001" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyx="0.0001" iyy="0" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="j0" type="fixed">
    <parent link="base_link"/>
    <child  link="l0"/>
  </joint>

  <link name="l0">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <origin rpy="0 0 0 " xyz="0 0 0"/>
      <material name="Gray">
        <color rgba=".7 .7 .7 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <joint name="j1" type="spherical">
    <dynamics damping="0.5"/>
    <origin rpy="0 0 0" xyz="-0.015 0 0" />
    <parent link="l0"/>
    <child  link="l1"/>
  </joint>

  <link name="l1">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <origin rpy="0 0 0 " xyz="-0.01 0 0"/>
      <material name="Gray">
        <color rgba=".7 .7 .7 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <origin rpy="0 0 0 " xyz="-0.015 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>


</robot>
